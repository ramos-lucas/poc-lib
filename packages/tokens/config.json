{
  "source": ["assets/**/*.json"],
  "platforms": {
    "web": {
      "transformGroup": "web",
      "buildPath": "dist/",
      "files": [{
        "format": "css/variables",
        "destination": "variables.css"
      },
      {
        "format": "scss/variables",
        "destination": "variables.scss"
      },
      {
        "format": "json/nested",
        "destination": "variables.json"
      }]
    }
  }
}
